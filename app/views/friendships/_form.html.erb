
<%= simple_form_for(@friendship) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :friend_id %>
    <%= f.input :t.string %>
    <%= f.input : %>
    <%= f.input :default %>
    <%= f.input :pending %>
    <%= f.input :t.datetime %>
    <%= f.input : %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
